{
	"name": "orisai/monolog-logtail",
	"description": "Monolog handler for Logtail",
	"keywords": [
		"logger",
		"logging",
		"logtail",
		"monolog",
		"orisai"
	],
	"type": "library",
	"license": "MPL-2.0",
	"homepage": "https://github.com/orisai/monolog-logtail",
	"authors": [
		{
			"name": "Marek BartoÅ¡",
			"homepage": "https://github.com/mabar"
		}
	],
	"require": {
		"php": ">=7.4.0 <8.3.0",
		"monolog/monolog": "^2.3.0|^3.0.0",
		"orisai/exceptions": "^1.0.0",
		"psr/http-client": "^1.0.1",
		"psr/http-factory": "^1.0.1",
		"psr/http-message": "^1.0.1"
	},
	"require-dev": {
		"brianium/paratest": "^6.3.0",
		"infection/infection": "^0.26.0",
		"nyholm/psr7": "^1.5.0",
		"orisai/coding-standard": "^3.0.0",
		"phpstan/extension-installer": "^1.0.0",
		"phpstan/phpstan": "^1.0.0",
		"phpstan/phpstan-deprecation-rules": "^1.0.0",
		"phpstan/phpstan-phpunit": "^1.0.0",
		"phpstan/phpstan-strict-rules": "^1.0.0",
		"phpunit/phpunit": "^9.5.0",
		"staabm/annotate-pull-request-from-checkstyle": "^1.7.0",
		"symfony/http-client": "^5.3.0|^6.0.0"
	},
	"autoload": {
		"psr-4": {
			"Orisai\\MonologLogtail\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Orisai\\MonologLogtail\\": "tests"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"sort-packages": true,
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true,
			"infection/extension-installer": true,
			"phpstan/extension-installer": true
		}
	}
}
